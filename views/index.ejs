<!DOCTYPE html>
<html>
<head>
  <title>Hospital Appointments</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
  <h2>Hospital Appointments</h2>
  <a href="/add" class="btn btn-success mb-3">Add Appointment</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Doctor</th>
        <th>Date</th>
        <th>Time</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% appointments.forEach(a => { %>
        <tr>
          <td><%= a.name %></td>
          <td><%= a.doctor %></td>
          <td><%= a.date %></td>
          <td><%= a.time %></td>
          <td>
            <a href="/edit/<%= a.id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/delete/<%= a.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Delete this appointment?')">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
